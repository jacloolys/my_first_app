<% @users.each do |user| %>

	<%= simple_form_for user, url: process_form_to_follow_user_path, method: "post" do |f| %>
		<%= user.email %>
		<%= f.input "user_to_follow", as: "hidden", input_html: {value: user.id} %>
		<% if current_user.following?(user) %>
			<%= f.submit "Unfollow", class: "btn btn-danger", name: "unfollow" %> <br>

		<% else %>
			<%= f.submit "Follow", class: "btn btn-primary", name: "follow" %><br>
			<% end %>
	<% end %>
<% end %>